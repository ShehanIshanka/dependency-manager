# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.WidgetController.index(request: Request)

# Widgets
GET     /kk                    controllers.WidgetController.listWidgets(request: Request)
POST    /aa                    controllers.WidgetController.createWidget(request: Request)
POST    /                   controllers.WidgetController.upload(request: Request)
POST    /aas                   controllers.WidgetController.buildDependencyGraph(request: Request)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
